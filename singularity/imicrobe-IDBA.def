Bootstrap: docker
From: ubuntu:latest

%runscript
    echo "Hello!"

%post
    apt update
    apt install -y wget build-essential

    # Install ABySS from source
    cd /
    wget https://github.com/loneknightpy/idba/archive/1.1.3.tar.gz
    tar -xf 1.1.3.tar.gz
    cd idba-1.1.3
    ./build.sh

    # Add environment variables to /environment file
    echo "\nexport PATH=/idba-1.1.3/bin:\$PATH" >> /environment

    # Create mount points for TACC directories
    mkdir /home1
    mkdir /scratch
    mkdir /work

%test
    idba 
